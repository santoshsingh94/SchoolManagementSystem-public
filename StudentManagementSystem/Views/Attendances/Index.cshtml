@model IEnumerable<SchoolManagementSystem.Models.Entities.Attendance>

@{
    ViewData["Title"] = "Attendance";
}
<p>
    <a asp-action="Create" class="btn btn-success">Submit Attendance</a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Attendance Record</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive ">
            <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Student ID
                        </th>
                        <th>
                            Class
                        </th>
                        <th>
                            Student
                        </th>

                        <th>
                            Attendance Date
                        </th>
                        <th>
                            Attendance Time
                        </th>
                        @*<th>
                            Session
                        </th>*@
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassTbl.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttendanceDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttendanceTime)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Session.Name)
                        </td>*@

                        <td>
                            <a asp-action="Details" asp-route-id="@item.AttendanceId" class="btn btn-info">Details</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
