@model IEnumerable<SchoolManagementSystem.Models.Entities.Designation>
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Designation";
}

<p>
    <a asp-action="Create" class="btn btn-success">New Designation</a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Designations</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive ">
            <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                           Designation Title
                        </th>
                        <th>
                            Status (@Html.DisplayNameFor(model => model.IsActive))
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FullName)                               
                            </td>
                            <td class="btn btn-group">
                                <a asp-action="Edit" asp-route-id="@item.DesignationId" class="btn btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.DesignationId" class="btn btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.DesignationId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>