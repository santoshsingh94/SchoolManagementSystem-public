@model IEnumerable<SchoolManagementSystem.Models.Entities.UserType>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">User Types</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @*@Html.DisplayNameFor(model => model.TypeName)*@
                            User  Type
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Description)*@
                            Description
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TypeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.UserTypeId" class="btn btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.UserTypeId" class="btn btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.UserTypeId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
