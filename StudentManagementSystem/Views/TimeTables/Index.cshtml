@model IEnumerable<SchoolManagementSystem.Models.Entities.TimeTable>

@{
    ViewData["Title"] = "TimeTable";
}

<p>
    <a asp-action="Create" class="btn btn-success">Assign Subject-Teacher</a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Time Tables</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive ">
            <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Teacher Id
                        </th>
                        <th>
                            Teacher
                        </th>
                        <th>
                            Subject
                        </th>
                        <th>
                            Start Time
                        </th>
                        <th>
                            End Time
                        </th>
                        <th>
                            Day
                        </th>
                        <th>
                            Status(IsActive)
                        </th> 
                        <th>
                            User
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Staff.StaffId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Staff.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassSubject.Name)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Day)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.FullName)
                        </td>
                        <td class=" btn-group">
                            <a asp-action="Edit" asp-route-id="@item.TimeTableId" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.TimeTableId" class="btn btn-info">Details</a>
                            @*<a asp-action="Delete" asp-route-id="@item.TimeTableId" class="btn btn-danger">Delete</a>*@
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
