@model IEnumerable<SchoolManagementSystem.Models.Entities.EmployeeSalary>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-success">Submit Salary</a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Employee's Salary Records</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive ">
            <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Employee Id
                        </th>
                        <th>
                            Employee
                        </th>
                        <th>
                            Salary(Month)
                        </th>
                        <th>
                            Salary(Year)
                        </th>
                        <th>
                            Salary Date
                        </th>
                        <th>
                            Amount
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Staff.StaffId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Staff.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalaryMonth)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalaryYear)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalaryDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.EmployeeSalaryId" class="btn btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.EmployeeSalaryId" class="btn btn-info">Details</a>
                                @*<a asp-action="Delete" asp-route-id="@item.EmployeeSalaryId">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
