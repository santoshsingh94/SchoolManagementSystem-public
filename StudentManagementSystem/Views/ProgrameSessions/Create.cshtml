@model SchoolManagementSystem.Models.Entities.ProgrameSession

@{
    ViewData["Title"] = "ProgrameSesssion";
}

<h2>Create</h2>

<h4>Programe Configuration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="SessionId" class="control-label">Select Session</label>
                <select asp-for="SessionId" class ="form-control" asp-items="ViewBag.SessionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProgrameId" class="control-label">Select Programe</label>
                <select asp-for="ProgrameId" class ="form-control" asp-items="ViewBag.ProgrameId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label">Enter Details</label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegDate" class="control-label">Reg Date</label>
                <input asp-for="RegDate" class="form-control" />
                <span asp-validation-for="RegDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-default">Back to List</a>
            </div>
        </form>
    </div>
</div>