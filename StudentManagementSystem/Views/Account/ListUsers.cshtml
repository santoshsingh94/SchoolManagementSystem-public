@model IEnumerable<SchoolManagementSystem.Models.Identity.ApplicationUser>
@{
    ViewData["Title"] = "ListUsers";
}
<p>
    <a asp-action="Register" class="btn btn-success">Create User</a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">User's List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive ">
            <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            User Id
                        </th>
                        <th>
                            User Name
                        </th>
                        <th>
                            Contact No.
                        </th>
                        <th>
                           City
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td class="btn-group">
                            <a asp-action="Edit" asp-route-id="" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="" class="btn btn-info">Details</a>
                            @*<a asp-action="Delete" asp-route-id="@item.EmployeeSalaryId">Delete</a>*@
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>