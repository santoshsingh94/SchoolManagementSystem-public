@model IEnumerable<SchoolManagementSystem.Models.Identity.EditRoleViewModel>
@{
    ViewData["Title"] = "ListRoles";
}
<p>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">User Roles/Types</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive ">
            <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Role Id
                        </th>
                        <th>
                            Role Name
                        </th>
                        <th>
                            Users Associated with this Role
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td>
                                @foreach (var user in item.Users)
                                {
                                    @Html.DisplayFor(modelItem => user)<br />
                                }
                            </td>
                            <td class="btn-group">
                                <a asp-action="EditRole" asp-controller="administration" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                
                                @*<a asp-action="Delete" asp-route-id="@item.EmployeeSalaryId">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>