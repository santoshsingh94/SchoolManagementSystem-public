@model SchoolManagementSystem.Models.Entities.Annual

@{
    ViewData["Title"] = "Promote Fee";
}

<h1>Create</h1>

<h4>Annual/Promote Fee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="ProgrameId" class="control-label">Select Programe</label>
                <select asp-for="ProgrameId" class ="form-control" asp-items="ViewBag.ProgrameId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Annual/Promote Fee Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fees" class="control-label">Annual Fee</label>
                <input asp-for="Fees" class="form-control" />
                <span asp-validation-for="Fees" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" />Status (@Html.DisplayNameFor(model => model.IsActive))
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-default">Back to List</a>
            </div>
        </form>
    </div>
</div>
