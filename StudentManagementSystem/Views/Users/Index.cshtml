@model IEnumerable<SchoolManagementSystem.Models.Entities.User>

@{
    ViewData["Title"] = "Users";
}

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<div class="card shadow mb-4">
<div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">All Users</h6>
</div>
<div class="card-body">
    <div class="table-responsive ">
        <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                    @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>                  
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserType)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserType.TypeName)
                        </td>
                        <td class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>
