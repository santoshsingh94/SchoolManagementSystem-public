@model IEnumerable<SchoolManagementSystem.ViewModels.StaffAttendanceReport>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width" />
    <title>EmployeeAttendance</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#printbtn').click(function () {
                window.print();
            });
        });
    </script>
</head>
<body>
    <br /><br /><br />
    <div class="container body-content">
        <button id="printbtn">Print Report</button>
        <h3>All Employee Attendance Reports</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Employee
                    </th>
                    <th>
                        Designation
                    </th>
                    <th>
                        Attendance Date
                    </th>
                    <th>
                        Check In
                    </th>
                    <th>
                        Check Out
                    </th>
                    <th>
                        Duty Hour's '
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Designation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttendanceDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ComingTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClosingTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DutyHour)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
