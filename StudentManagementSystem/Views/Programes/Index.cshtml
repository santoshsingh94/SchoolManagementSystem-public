@model IEnumerable<SchoolManagementSystem.Models.Entities.Programe>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Programe";
}

<p>
    <a asp-action="Create" class="btn btn-success">New Programe</a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Programes</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive ">
            <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            Created By
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                               @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                            </td>
                            <td class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.ProgrameId" class="btn btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.ProgrameId" class="btn btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.ProgrameId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

