@model IEnumerable<SchoolManagementSystem.Models.Entities.ExamMark>

@{
    ViewData["Title"] = "ExamMarks";
}

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Exam Marks Sheet</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive ">
            <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th>
                            Exam
                        </th>
                        <th>
                            Student
                        </th>
                        <th>
                            Total Marks
                        </th>
                        <th>
                            Obtain Marks
                        </th>
                        <th>
                            Class Subject
                        </th>


                        <th>
                            Created By
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Exam.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalMarks)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ObtainMarks)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassSubject.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                        </td>
                        <td class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.ExamMarkId" class="btn btn-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ExamMarkId" class="btn btn-info">Details</a>
                            @*<a asp-action="Delete" asp-route-id="@item.ExamMarkId" class="btn btn-danger">Delete</a>*@
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
